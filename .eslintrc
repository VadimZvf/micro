{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:jest/recommended"],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true,
        "browser": true,
        "jest/globals": true
    },
    "plugins": ["react", "jsx-a11y", "import", "jest"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "globals": {},
    "rules": {
        "indent": [2, 4]
    }
}
